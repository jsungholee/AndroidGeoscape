<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lawnscape.ChatActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/etEnterMessage"
        android:layout_centerHorizontal="true"
        android:id="@+id/lvMessageWindow"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textAutoCorrect"
        android:imeOptions="actionSend"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layoutalignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/etEnterMessage"
        android:layout_toLeftOf="@+id/buttonSendMessage"
        android:layout_toStartOf="@+id/buttonSendMessage"
        app:bootstrapSize="lg"
        app:bootstrapBrand="primary" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSendMessage"
        android:onClick="sendMessage"
        android:layout_alignTop="@+id/etEnterMessage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:bootstrapBrand="primary"
        app:bootstrapText="Send"
        app:bootstrapSize="md"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true" />
</RelativeLayout>
